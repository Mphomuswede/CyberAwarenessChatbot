<Window x:Class="CyberAwarenessChatbot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberAwarenessChatbot"
        mc:Ignorable="d"
        Title="Cybersecurity Chatbot" Height="650" Width="850"
        Background="#1E1E1E" Foreground="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Chat Display -->
            <RowDefinition Height="Auto"/>
            <!-- User Input -->
            <RowDefinition Height="Auto"/>
            <!-- Button Row -->
        </Grid.RowDefinitions>

        <!-- Chat Display Area -->
        <TextBox x:Name="ChatDisplay"
                 Grid.Row="0"
                 Height="420"
                 TextWrapping="Wrap"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 FontSize="12"
                 Background="#2D2D30"
                 Foreground="White"
                 Margin="0,0,0,10"
                 Text="Welcome to the Cybersecurity Awareness Chatbot!" />

        <!-- Input Box -->
        <TextBox x:Name="UserInput"
                 Grid.Row="1"
                 Height="35"
                 FontSize="14"
                 Background="#333"
                 Foreground="White"
                 BorderBrush="#555"
                 Margin="0,0,0,10"/>

        <!-- Button Row -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Send"
            Click="SendButton_Click"
            Width="100" Height="35"
            Background="#007ACC" Foreground="White"
            BorderBrush="#007ACC"
            Margin="0,0,15,0" />

            <Button Content="Start Quiz"
            Click="StartQuiz_Click"
            Width="100" Height="35"
            Background="#007ACC" Foreground="White"
            BorderBrush="#007ACC"
            Margin="0,0,15,0" />

            <Button Content="View Tasks"
            Click="ViewTasks_Click"
            Width="100" Height="35"
            Background="#007ACC" Foreground="White"
            BorderBrush="#007ACC"
            Margin="0,0,15,0" />

            <Button Content="Clear Chat"
            Click="ClearChat_Click"
            Width="100" Height="35"
            Background="#E81123" Foreground="White"
            BorderBrush="#E81123" />

            <Button Content="View Activity Log"
        Height="30"
        Width="150"
        Margin="10,5,0,0"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Click="ViewActivityLog_Click"/>

        </StackPanel>
    </Grid>
</Window>
